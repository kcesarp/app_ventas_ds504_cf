@model IEnumerable<web_ventas_ds504_cf.Models.Marca>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Listado de Marcas</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Marca"
               asp-action="Create"><i class="fa fa-plus-circle"></i>Agregar Marca</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(marca => marca.codigo_marca)</td>
                        <td>@Html.DisplayNameFor(marca => marca.marca)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reg in Model)
                    {
                        <tr>
                            <td>@reg.codigo_marca</td>
                            <td>@reg.marca</td>
                            <td>
                                <a asp-controller="Marca" asp-action="Edit"
                                   asp-route-id="@reg.codigo_marca"
                                   class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>

                                <a asp-controller="Marca" asp-action="Delete"
                                   asp-route-id="@reg.codigo_marca"
                                   class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <h5>Elaborado por: SACA MACHACA CESAR</h5>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>

